})

local function AntiAFK()
    local bb = game:GetService("VirtualUser")
    game:GetService("Players").LocalPlayer.Idled:Connect(function()
        bb:CaptureController()
        bb:ClickButton2(Vector2.new())
        print("Anti AFK: You went idle and ROBLOX tried to kick you but we reflected it!")
        wait(2)
        print("Anti AFK: Script Re-Enabled")
    end)
end

Tab:AddButton({
    Name = "anti afk",
    Callback = function()
        AntiAFK()
    end
})

OrionLib:Init()